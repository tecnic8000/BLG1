generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email               String     @unique @db.VarChar(255)
  phone               String?    @unique @db.Text
  auth_provider       String?    @db.Text
  pwd                 String?    @db.Text
  pin                 Int?
  role                String?    @db.VarChar(255)
  is_verified         Boolean    @default(false)
  is_active           Boolean    @default(true)
  verify_token        String?    @db.Text
  verify_token_expire DateTime?  @db.Timestamp(0)
  reset_token         String?    @db.Text
  reset_token_expire  DateTime?  @db.Timestamp(0)
  last_login          DateTime?  @db.Timestamp(0)
  created_at          DateTime   @default(now()) @db.Timestamp(0)
  updated_at          DateTime   @default(now()) @updatedAt @db.Timestamp(0)

  profile             Profile?
  shoplists           Shoplist[]

  @@map("users")
}

model Profile {
  id       String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id  String  @unique @db.Uuid
  username String? @unique @db.VarChar(255)
  score    Int     @default(0)
  noti_pref String @default("all") @db.VarChar(255)
  longid   String? @db.VarChar(255)

  user     User    @relation(fields: [user_id], references: [id])

  @@map("profiles")
}

model Shoplist {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String   @db.Uuid
  list_detail Int[]
  note       String?  @db.VarChar(225)
  created_at DateTime @default(now()) @db.Timestamp(0)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamp(0)
  longid     String?  @db.Text

  user       User     @relation(fields: [user_id], references: [id])

  @@map("shoplists")
}